{
    "name": "ksfraser/auth",
    "description": "A comprehensive, secure, and reusable PHP authentication library",
    "version": "1.0.0",
    "type": "library",
    "keywords": [
        "authentication",
        "auth",
        "security",
        "user-management",
        "session",
        "csrf",
        "middleware",
        "php",
        "mysql"
    ],
    "homepage": "https://github.com/ksfraser/auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Fraser",
            "email": "fraser@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-openssl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Ksfraser\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ksfraser\\Auth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=max",
        "phpcs": "phpcs src --standard=PSR12",
        "phpcbf": "phpcbf src --standard=PSR12",
        "setup": "php setup.php",
        "migrate": "php migrate_auth.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "support": {
        "issues": "https://github.com/ksfraser/auth/issues",
        "source": "https://github.com/ksfraser/auth",
        "docs": "https://github.com/ksfraser/auth/blob/main/README.md"
    }
}
