{
    "name": "ksfraser/trading-system",
    "description": "Enhanced Trading System with Finance Package",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "lupecode/php-trader-native": "^2.2",
        "openai-php/client": "^0.8.0",
        "symfony/http-foundation": "^6.0",
        "symfony/security-core": "^6.0",
        "symfony/security-csrf": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Ksfraser\\Auth\\": "src/Ksfraser/Auth/",
            "Ksfraser\\Finance\\": "src/Ksfraser/Finance/",
            "Ksfraser\\LLM\\": "src/Ksfraser/LLM/",
            "App\\": "web_ui/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src/",
        "cs-check": "phpcs src/",
        "cs-fix": "phpcbf src/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
