# Finance Package Configuration Guide

# Database Configuration
# Use existing DatabaseConfig system - configure in db_config.yml:
# database:
#   legacy:
#     database: stock_market

# API Configuration  
# API keys and external services are configured in api_config.yml (separate from database)
# Copy api_config.example.yml to api_config.yml and configure:

# stock_apis:
#   alphavantage:
#     api_key: "your_alpha_vantage_key"
# 
# ai_apis:
#   openai:
#     api_key: "your_openai_key"
#     model: "gpt-4"

# finance:
#   rate_limiting:
#     delay_between_requests: 500000
#   general:
#     max_retries: 3
#     bulk_update_limit: 100

# Note: This approach separates:
# - Database credentials: db_config.yml  
# - API keys: api_config.yml
# - Application logic: separate from sensitive data
